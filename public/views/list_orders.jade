extends layout
block content
   main
      .container
         br
         br
         if(page == 'my')
            h3 #{lang.__('my_orders')}
         if(page == 'all')
            h3 #{lang.__('all_orders')}
         if(page == 'assigned')
            h3 #{lang.__('assigned_orders')}

         include partial_table_orders

   if(page == 'all')
      #modal_set_designer.modal.modal-sm.fade(tabindex="-1" role="dialog")
         .modal-content
            .modal-header
               button.close(type="button" data-dismiss="modal" aria-label="Close")
                  span(aria-hidden="true") &times;
               h6 #{lang.__('modal_assign_order_title')}
            .modal-body
               .row
                  .input-field.col.s12
                     i.fa.fa-user.prefix
                     input#autocomplete_designer(type="text" class="autocomplete")
                     label(for="autocomplete_designer") #{lang.__('email')}
         .modal-footer
            a.btn.btn-flat.waves.waves-purple(onclick="assignDesigner()" data-dismiss="modal" aria-label="Close") OK
