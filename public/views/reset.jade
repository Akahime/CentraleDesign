extends layout
block content

   .row
      h3 #{lang.__('reset')} #{lang.__('password')}
   .row
      .col.s12.l12
         .card-panel
            form.container(method="POST")
               .row
                  .input-field.col.s12
                     input(type="password",name="password").form-control
                     label #{lang.__('new')} #{lang.__('password')}
               .row
                  .input-field.col.s12
                     input(type="password",name="confirm").form-control
                     label #{lang.__('confirm')} #{lang.__('password')}
               .row.center-align
                  input(type="submit",value="#{lang.__('register')}" onlick="").btn.btn-lg
               if message
                  .row
                     .text-error
                        span=message

